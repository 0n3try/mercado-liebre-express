<!DOCTYPE html>
<html lang="en">

<%-include('partials/head')%>

    <body>
        
        <%-include('partials/header')%>


        <section>
            <img class="banner-img" src="/img/img-home-banner.jpg" alt="Banner">
        </section>


        <main>

            <section>
                <h3>Basado en tu ultima visita</h3>
                <div class="productos">
                    <% visitado.forEach((row) => {  %>
                    <article> 
                        <img src="/img/<%= row.image %>" alt="<%= row.image %>">
                        <div class="info-article">
                            <i class="fas fa-truck"></i>
                            <p class="precio"> $ <%= row.price %></p>
                            <p class="descuento"><%= row.discount %>% OFF</p>
                            <h4 class="desc-prod"><%= row.name %></h4>
                        </div>
                    </article>
                    <% }) %>
                </div>
            </section>
            <section>
                <h3>Ofertas</h3>
                <div class="productos">
                    <% oferta.forEach((row) => {  %>
                        <article> 
                            <img src="/img/<%= row.image %>" alt="<%= row.image %>">
                            <div class="info-article">
                                <i class="fas fa-truck"></i>
                                <p class="precio"> $ <%= row.price %></p>
                                <p class="descuento"><%= row.discount %>% OFF</p>
                                <h4 class="desc-prod"><%= row.name %></h4>
                            </div>
                        </article>
                        <% }) %>
                </div>
            </section>

        </main>

        <%-include('partials/footer')%>
        
    </body>

</html>